extend ../layout

block body
	h1 !{user.steam_nick}


	if games instanceof Array && games.length > 0
		ul#gamelist
    for game in games
      li(style="list-style-image: url('http://media.steampowered.com/steamcommunity/public/images/apps/#{game.appid}/#{game.img_icon_url}.jpg')")
        a(href="http://store.steampowered.com/app/#{game.appid}")
          = game.name
	else
		p No games found :(
